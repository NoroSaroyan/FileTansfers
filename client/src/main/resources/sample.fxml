<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="noro.geekbrains.client.Controller">
    <stylesheets>
        <URL value="@/css/style.css"/>
        <?scenebuilder-stylesheet style.css?>
    </stylesheets>

    <HBox fx:id="authPanel" stylesheets="@css/style.css">
        <TextField fx:id="loginField" prefHeight="39.0" prefWidth="219.0" promptText="login" HBox.hgrow="ALWAYS"/>
        <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="password" HBox.hgrow="ALWAYS"/>
        <Button minWidth="100" onAction="#tryToAuth" text="Sign In"/>
        <Button minWidth="100" onAction="#showRegWindow" text="Sign Up"/>
    </HBox>
    <HBox fx:id="selectFile"/>

    <HBox prefHeight="335.0" prefWidth="738.0" VBox.vgrow="ALWAYS">
        <ListView fx:id="files" managed="false" minWidth="300" onMouseReleased="#clientListMouseReleased"
                  visible="false"/>
        <!--                layoutX="140.0" layoutY="140.0"-->
        <Button fx:id="download" minWidth="100.0" onAction="#saveFileToComputer"
                text="Download" visible="false" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets top="100.0"/>
            </HBox.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Button>
        <Button fx:id="delete" minWidth="100.0" onAction="#deleteFile"
                 text="Delete" visible="false" HBox.hgrow="NEVER"/>
        <Button fx:id="selectFileButton" minWidth="100.0" onAction="#selectFile"
                text="Add File" visible="false" HBox.hgrow="NEVER">

            <HBox.margin>
                <Insets top="300.0"/>
            </HBox.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Button>
    </HBox>
</VBox>
